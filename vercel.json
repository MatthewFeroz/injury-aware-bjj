{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install",
        "buildCommand": "npm run build",
        "outputDirectory": "static/frontend"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/static/frontend/(.*)",
      "dest": "/static/frontend/$1"
    },
    {
      "src": "/",
      "dest": "/static/frontend/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/static/frontend/index.html"
    }
  ]
}
